<div class="container">
      <p class="h4"><%= @name %>さんの会員詳細</p>
    <table class="table table-borderless"  style="margin: 50px; width: auto;">
    <tr>
      <td>会員ID</td>
      <td><%= @customer.id %></td>
    </tr>
    <tr>
      <td>氏名</td>
      <td><%= @name %></td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td><%= @name_kana %></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= @customer.email %></td>
    </tr>
    <tr>
      <td>会員ステータス</td>
      <% if @customer.is_active %>
      <td  class="font-weight-bold" style="color: #28a745;">有効</td>
      <% else %>
      <td  class="font-weight-bold" style="color: #dc3545;">退会</td>
      <% end %>
    </tr>
    <tr>
      <td><%= link_to "編集する", edit_admin_customer_path,class: "btn btn-success" %></td>
      <td><%= link_to "注文履歴一覧を見る", admin_path,class: "btn btn-primary" %></td>
    </tr>
</table>
</div>