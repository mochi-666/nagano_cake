<div class="container">
  <p class="h4" style="margin-top: 50px; margin-left: 100px; margin-bottom: 50px;">商品新規登録</p>
  <% if @item.errors.any? %>
  <%= @item.errors.count %>件のエラーが発生しました
    <% @item.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>
  <%= form_with model: @item,url: admin_items_path, local:true do |f| %>
  <div style="display: inline-block; margin-left: 250px;">
    <div clas="col">
      <p  style="display: inline-block;" class="font-weight-bold">商品画像</p>
      <p  style="display: inline-block; margin-left: 50px;"><%= f.attachment_field :image %></p>
    </div>
    <div clas="col">
      <p style="display: inline-block;" class=" font-weight-bold ">商品名</p>
      <p style="display: inline-block; margin-left: 65px;"><%= f.text_field :name %></p><br>
    </div>
    <div clas="col">
      <p style="display: inline-block;" class="font-weight-bold ">商品説明</p>
      <p style="display: inline-block; margin-left: 50px;"><%= f.text_area :introduction %></p><br>
    </div>
    <div clas="col">
      <p style="display: inline-block;" class="font-weight-bold ">税別価格</p>
      <p style="display: inline-block; margin-left: 50px;"><%= f.text_field :price %>円</p><br>
    </div>
    <div style="margin-left: 200px;">
      <%= f.submit '新規投稿' , class: "btn btn-success" %>
    </div>
    <% end %>
  </div>
</div>