<div class="container">
  <h3>商品一覧 (全 <%= @items.count %> 件)</h3><br>
  <div class="row">
	  <% @items.each do |item| %>
	  <div class="col-md-3">
	    <p class="justify-content-center mr-2">
	      <%= link_to item_path(item.id) do %>
        <%= attachment_image_tag item, :image, size: "150x100" %><br>
        <%= item.name %><br>
        ¥<%= (item.price * 1.1).floor.to_s(:delimited) %><br>
        <% end %>
      </p>
    </div>
    <% end %>
  </div>
  <%= paginate @item %></div>