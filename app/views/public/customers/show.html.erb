<table>
  <thead>
    <th>マイページ</th>
  </thead>
  <tbody>
    <tr>
      <th>登録情報</th>
      <td><%= link_to "編集する", edit_customer_path(current_customer.id), class: "btn btn-success" %></td>
    </tr>
    <tr>
      <td>氏名</td>
      <td><%= @customer.first_name + @customer.last_name %></td>
    </tr>
    <tr>
      <td>カナ</td>
      <td><%= @customer.first_name_kana + @customer.last_name_kana %></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= @customer.email %></td>
    </tr>
  </tbody>
  <tbody>
    <tr>
      <th>配送先</th>
      <td><%= link_to "一覧を見る", addresses_path(params[:id]),class: "btn btn-success"  %></td>
    </tr>
    <tr>
      <th>注文履歴</th>
      <td><%= link_to "一覧を見る", orders_path(params[:id]),class: "btn btn-success" %></td>
    </tr>
  </tbody>
</table>