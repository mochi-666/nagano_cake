<div class="container-fluid">
	<div class="row h-50">
	  <div class= "col-md-6 offset-md-3 mt-5">
	    <div>
        <span class="h2 mr-5">配送先登録/一覧</><span>
      </div>
      <div class="table-responsive-sm">
        <table class="table">
          <tbody class="table table-borderless">
            <% if @address.errors.any? %>
  　　　　　  　　　　<%= @address.errors.count %>件のエラーが発生しました
              <% @address.errors.full_messages.each do |message| %>
                <%= message %>
              <% end %>
            <% end %>
            <%= form_with model: @address, url: addresses_path, local: true do |f| %>
            <tr>
              <td><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></td>
              <td><%= f.text_field :postal_code %></td>
            </tr>
            <tr>
              <td><%= f.label :address, "住所" %></td>
              <td><%= f.text_field :address, :size=>"60"  %></td>
            </tr>
            <tr>
              <td><%= f.label :name, "宛名" %></td>
              <td><%= f.text_field :name %></td>
              <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <div style="display: inline-block;">
          <table class="table table-bordered">
            <tr>
              <th class="order__confirm__table__cell__1">郵便番号</th>
              <th class="order__confirm__table__cell__1">住所</th>
              <th class="order__confirm__table__cell__1">宛名</th>
              <td colspan="3"></td>
            </tr>
            <% @addresses.each do |address| %>
            <tr>
              <td><%= address.postal_code %></td>
              <td><%= address.address %></td>
              <td><%= address.name %></td>
              <td><%= link_to "編集する", edit_address_path(address.id), class: "btn btn-success" %> <%= link_to "削除する", address_path(address.id), method: :delete, class: 'btn btn-danger' %></td>
            </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>