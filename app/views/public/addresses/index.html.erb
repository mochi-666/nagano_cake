<table>
  <thead>
    <th>配送先登録/一覧</th>
  </thead>
  <tbody>
  <% if @address.errors.any? %>
  <%= @address.errors.count %>件のエラーが発生しました
  <% @address.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
  </ul>
  <% end %>
    <%= form_with model: @address, url: addresses_path, local: true do |f| %>
    <tr>
     <td>
       <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
       <%= f.text_field :postal_code %>
     </td>
    </tr>
    <tr>
      <td>
        <%= f.label :address, "住所" %>
        <%= f.text_field :address %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.label :name, "宛名" %>
        <%= f.text_field :name %>
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </td>
    </tr>
    <% end %>
  </tbody>
  <tbody>
    <tr>
      <td>郵便番号</td>
      <td>住所</td>
      <td>宛名</td>
      <td colspan="3"></td>
    </tr>
    <% @addresses.each do |address| %>
    <tr>
      <td><%= address.postal_code %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
      <td><%= link_to "編集する", edit_address_path(address.id), class: "btn btn-success" %></td>
      <td><%= link_to "削除する", address_path(address.id), method: :delete, class: 'btn btn-sm btn-danger' %></td>
    </tr>
    <% end %>
  </tbody>
</table>