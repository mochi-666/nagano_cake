<table>
  <thead>
    <th>注文履歴一覧</th>
  </thead>
  <tbody>
    <tr>
      <td>注文日</td>
      <td>配送先</td>
      <td>注文商品</td>
      <td>支払金額</td>
      <td>注文詳細</td>
    </tr>
  </tbody>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td><%= order.created_at %></td>
      <td><%= order.postal_code %><br>
          <%= order.address %><br>
          <%= order.name %>
      </td>
      <td>
      <% order.order_items.each do |order_item| %>
      <%= order_item.item.name %><br>
      <% end %>
      </td>
      <td><%= order.total_payment.to_s(:delimited, delimiter: ',') %>円</td>
      <td><%= link_to"表示する", order_path(order.id), class: "btn btn-success" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
