<table>
  <thead>
    <th>注文履歴詳細</th>
  </thead>
  <table>
    <tr>
      <th>注文情報</th>
    </tr>
    <tr>
      <td>注文日</td>
      <td><%= @order.created_at %></td>
    </tr>
    <tr>
      <td>配送先</td>
      <td>
        〒<%= @order.postal_code %><br>
        <%= @order.address %><br>
        <%= @order.name %>
      </td>
    </tr>
    <tr>
      <td>支払方法</td>
      <td><%= @order.payment_method_i18n %></td>
    </tr>
  </table>
  <table>
    <tr>
      <th>請求情報</th>
    </tr>
   <tr>
      <td>商品合計</td>
      <td><%= @total.to_s(:delimited) %></td>
    </tr>
    <tr>
      <td>送料</td>
      <td><%= @order.postage %></td>
    </tr>
    <tr>
      <th>請求金額</th>
      <th><%= @total_payment.to_s(:delimited) %></th>
    </tr>
  </table>
  <table>
    <tr>
      <th>注文内容</th>
    </tr>
    <tr>
      <td>商品名</td>
      <td>単価(税込)</td>
      <td>個数</td>
      <td>小計</td>
    </tr>
    <% @order_items.each do |order_item| %>
    <tr>
      <td><%= order_item.item.name %></td>
      <td><%= (order_item.item.price * 1.1).floor.to_s(:delimited) %></td>
      <td><%= order_item.amount %></td>
      <td>
        <% subtotal = ((order_item.item.price*order_item.amount)*1.1).to_i %>
        <%= subtotal %>
      </td>
    </tr>
    <% end %>
  </table>
</table>
